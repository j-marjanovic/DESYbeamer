\mode<all>

\RequirePackage{helvet}
\RequirePackage{moresize}

\setbeamerfont{title}{size=\huge,series=\bfseries}
\setbeamerfont{subtitle}{size=\normalsize,series=\bfseries}

\setbeamerfont{local structure}{series=\bfseries}

\setbeamerfont{text in title}{size=\footnotesize}
\setbeamerfont*{author}{parent=text in title,series=\bfseries}
\setbeamerfont*{institute}{parent=text in title}
\setbeamerfont*{date}{parent=text in title}
\setbeamerfont{conference}{parent=text in title}

\setbeamerfont{frametitle}{size=\large,series=\bfseries}
\setbeamerfont{framesubtitle}{size=\normalsize}

\setbeamerfont{item}{parent=local structure}
\setbeamerfont{subitem}{size=\footnotesize}
\setbeamerfont{footnote}{size=\ssmall}

\setbeamerfont{text in head/foot}{parent=structure,size=\tiny}
\setbeamerfont*{author in head/foot}{parent=text in head/foot,series=\bfseries}
\setbeamerfont*{institute in head/foot}{parent=text in head/foot}
\setbeamerfont*{date in head/foot}{parent=text in head/foot}
\setbeamerfont*{pagenumber in head/foot}{parent=text in head/foot,series=\bfseries}

