\addtolength\leftmargini{\labelsep}
\newcommand<>{\etem}[1][]{%
    \setbeamercolor{items}{parent=emphasized text}%
    \ifthenelse{\isempty{#1}}{\item#2}{\item#2[#1]}%
    \setbeamercolor{items}{parent=local structure}%
}
\newcommand<>{\atem}[1][]{%
    \setbeamercolor{items}{parent=alerted text}%
    \ifthenelse{\isempty{#1}}{\item#2}{\item#2[#1]}%
    \setbeamercolor{items}{parent=local structure}%
}

