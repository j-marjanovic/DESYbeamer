\mode<presentation>

\defbeamertemplate{title page}{desy}{
	\vspace{-0.7cm}
	\usebeamerfont{title}
	\begin{beamercolorbox}[wd=\paperwidth,ht=1.74cm,dp=1ex,leftskip=0.3cm,rightskip=0.3cm]{title}
		\inserttitle\usebeamercolor[fg]{local structure}.\par%
	\end{beamercolorbox}
	\usebeamerfont{subtitle}
	\begin{beamercolorbox}[wd=\paperwidth,ht=2.8ex,dp=1ex,leftskip=0.3cm,rightskip=0.3cm]{subtitle}
		\insertsubtitle\par%
	\end{beamercolorbox}
	\begin{beamercolorbox}[wd=\paperwidth,ht=3.2cm,sep=0cm]{titlegraphic}
		\usebeamertemplate{titlegraphic}
	\end{beamercolorbox}
	\usebeamerfont{text in title}
	\vspace{1ex}
	\hfill
	\begin{beamercolorbox}[wd=0.4\paperwidth,left]{text in title}
		\usebeamerfont*{author}\usebeamercolor*[fg]{author}\insertauthor\par
		\usebeamerfont*{institute}\usebeamercolor*[fg]{institute}\insertinstitute\par
		\usebeamerfont*{date}\usebeamercolor*[fg]{date}\insertdate
	\end{beamercolorbox}
	\vfill
	\begin{beamercolorbox}[wd=\paperwidth,ht=1.9cm,sep=0cm]{logo in title}
		\usebeamertemplate{logo in title}
	\end{beamercolorbox}
	\vspace{-1.1cm}
}

